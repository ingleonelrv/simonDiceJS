body
    margin: 0
    background: #dedede
    display: flex
    align-items: center
    height: 100vh

.gameboard
    height: 100vh
    width: 100vh
    border-radius: 50%
    overflow: hidden
    margin: 0 auto
    max-height: 60vh
    max-width: 60vh
.color
    width: 50%
    height: 50%
    display: inline-block
    
.left 
    float: left
    
.right 
    float: left
    
.celeste
    box-shadow: inset -.2em -.2em  rgba(0, 0, 0, .2) 
    background: #22a6b3
    &.light
        background: #7ed6df
    
.violeta
    box-shadow: inset 0 -.2em  rgba(0, 0, 0, .2)
    background: #be2edd
    &.light 
        background: #e056fd
    
.naranja 
    box-shadow: inset -.2em 0  rgba(0, 0, 0, .2)
    background: #f0932b   
    &.light
        background: #ffbe76
    
.verde 
    box-shadow: inset 0 0  rgba(0, 0, 0, .2)
    background: #6ab04c   
    &.light 
        background: #badc58
    
.btn-start 
    width: 400px
    height: 100px
    background: #ecf0f1
    color: #2c3e50
    font-size: 2.5rem
    position: absolute
    top: calc(50% - 50px)
    left: calc(50% - 200px)
    
.hide 
    display: none
    